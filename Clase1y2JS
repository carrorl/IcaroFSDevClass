//Clase 2
//Variables
let nombre = "Lucas"
let apellido = "Carro"
let edad = 31

//Función
function concatenar(paramNombre, paramApellido,paramEdad) {
    const palabraCompleta = paramNombre + " " + paramApellido + " " + paramEdad
    return palabraCompleta
} 

//Teorema de Pitágoras
function teoremaDePitagoras(cat1, cat2) {
    const sumCuadCat = Math.pow(cat1, 2) + Math.pow(cat2, 2)
    const hyp = Math.sqrt(sumCuadCat)
    return hyp
} 

//Valores a Parámetros
const resultado1 = concatenar("Juancito","Perez", 7)
const resultado2 = concatenar("Alexander","the Great",29)
const resultado3 = concatenar(nombre,apellido,edad)
const resultado4 = concatenar("a","b",3)
const resultadohyp1 = teoremaDePitagoras(3,7)
const resultadohyp2 = teoremaDePitagoras(8,15)

//Output
console.log(resultado1)
console.log(resultado2)
console.log(resultado3)
console.log(resultado4)
console.log("La hipotenusa de un triangulo de cateto mayor igual a 7 cm y cateto menor igual a 3 cm es: ", resultadohyp1)
console.log("La hipotenusa de un triangulo de cateto mayor igual a 15 cm y cateto menor igual a 8 cm es: ", resultadohyp2)
